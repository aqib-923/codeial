<!-- constant part in all pages (even the above tags) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <!-- to get individual styles of sub pages -->
    <%- style %>
</head>
<body>
    
    <%- include('_header'); %> 

    <!-- the only variable part -->
    <main id="layout-main">
        <%- body %> 
    </main>

    <!-- using noty js for better looking flash messages -->
    <script>
         <% if(flash.success && flash.success.length > 0) { %>
            new Noty({
                theme: 'relax',
                text: "<%=flash.success %>",
                type: 'success',
                layout: 'topRight',
                timeout: 1500
            }).show();
         <% } %>   

         <% if(flash.error && flash.error.length > 0) { %>
            new Noty({
                theme: 'relax',
                text: "<%=flash.error %>",
                // error noty will be red in colour
                type: 'error', 
                layout: 'topRight',
                timeout: 1500
            }).show();
         <% } %>   
    </script>
   
    
    
    <%- include('_footer'); %>

    <!-- to get individual scripts of sub pages -->
    <%- script %>
</body>
</html>