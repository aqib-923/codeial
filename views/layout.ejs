<!-- constant part in all pages (even the above tags) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <!-- to get individual styles of sub pages -->
    <%- style %>
</head>
<body>
    
    <%- include('_header'); %> 

    <!-- checking if there are any flash messages  -->
    <% if(flash.success && flash.success.length > 0) { %>
        <h5>
            <%= flash.success %>
        </h5>
    <% } %>

    <!-- the only variable part -->
    <main id="layout-main">
        <%- body %> 
    </main>
   
    
    
    <%- include('_footer'); %>

    <!-- to get individual scripts of sub pages -->
    <%- script %>
</body>
</html>